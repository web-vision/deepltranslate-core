#!/bin/bash

echo "###############################"
echo "Update TYPO3 dependency to v10"
echo "###############################"
echo ""

echo "Remove Requires from vX"
composer remove \
    typo3/cms-backend \
    typo3/cms-core \
    typo3/cms-extbase \
    typo3/cms-extensionmanager \
    typo3/cms-fluid \
    typo3/cms-frontend \
    typo3/cms-install \
    typo3fluid/fluid \
    b13/container \
    helhum/typo3-console \
    saschaegerer/phpstan-typo3 \
    typo3/cms-belog \
    typo3/cms-filelist \
    typo3/cms-info \
    typo3/cms-lowlevel \
    typo3/cms-tstemplate \
    typo3/cms-workspaces \
    typo3/testing-framework

rm composer.lock

echo "Add Requires for v10"
composer req \
    typo3/cms-core:^10.4 \
    typo3/cms-backend:^10.4 \
    typo3/cms-install:^10.4 \
    typo3/cms-extbase:^10.4 \
    typo3/cms-fluid:^10.4 \
    typo3/cms-frontend:^10.4 \
    typo3/cms-extensionmanager:^10.4 -W

echo "Add Dev-Requires for v10"
composer req \
    b13/container:^1.6 \
    saschaegerer/phpstan-typo3:^1.0 \
    helhum/typo3-console:^6.7 \
    typo3/cms-belog:^10.4 \
    typo3/cms-filelist:^10.4 \
    typo3/cms-info:^10.4 \
    typo3/cms-lowlevel:^10.4 \
    typo3/cms-tstemplate:^10.4 \
    typo3/cms-workspaces:^10.4 \
    typo3/testing-framework:^6.16 --dev -W --no-scripts

echo "Update Instance"
composer install
